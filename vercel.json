{
  "version": 2,

  "redirects": [
    {
      "source": "/",
      "destination": "/sv",
      "permanent": false
    }
  ],

  "installCommand": "pnpm install --frozen-lockfile",
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist",

  "rewrites": [{ "source": "/(.*)", "destination": "/index.html" }],

  "crons": [
    {
      "path": "/api/cron/rsvp-reminders",
      "schedule": "0 8 * * *"
    }
  ]
}
